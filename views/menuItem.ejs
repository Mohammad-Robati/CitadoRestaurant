<% include ./header.ejs %> 

  <div id="spacer" style="height: 100px;background-color: gray;"></div>
  <div id="menu-item">
    <div class="container">
      <h2 class="text-center m-3">منو</h2>
      <div class="row justify-content-center">
        <div class="my_col">
          <div class="card bg-success" style="width: 30rem;">
            <div class="card-body text-center">
              <form method="POST" action="/menuItem">
                <div class="form-group text-white">
                  <label for="menu-item-name">افزودن غذای جدید</label>
                  <input type="text" class="form-control mb-2" name="name" placeholder="نام">
                  <input type="number" class="form-control" name="price" placeholder="قیمت">
                  <input type="submit" class="float-right btn btn-warning mx-3 mt-3" value="افزودن">
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <% for(var i=0; i<menuItems.length; i++) { %>
        <div class="my_col">
          <div class="card bg-white" border="1" style="width: 10rem;">
            <div class="card-body text-center">
              <form method="POST" action="/menuItem/<%=menuItems[i].id%>?_method=PUT">
                <input type="text" class="form-control mb-2" name="name" placeholder="نام"
                  value="<%= menuItems[i].name %> ">
                <input type="number" class="form-control" name="price" placeholder="قیمت"
                  value="<%= menuItems[i].price %>">
                <input type="submit" class="btn btn-warning my-2 w-100" value="تغییر">
              </form>
              <form method="POST" action="/menuItem/<%=menuItems[i].id%>?_method=DELETE">
                <button class="btn btn-info w-100">حذف</button>
              </form>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>

</html>