<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="stylesheets/bootstrap-grid.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
</head>

<body>
    <header>
        <div class="row justify-content-center">
            <div class="alert alert-primary m-3" role="alert">
                <a href="">Customer Orders</a>
            </div>
            <div class="alert alert-primary m-3" role="alert">
                <a href="">Store Orders</a>
            </div>
            <div class="alert alert-primary m-3" role="alert">
                <a href="">Customers</a>
            </div>
            <div class="alert alert-primary m-3" role="alert">
                <a href="">Reports</a>
            </div>
        </div>
    </header>
    <div id="spacer" style="height: 100px;background-color: gray;"></div>
    <div id="address">
        <div class="container">
            <h2 class="text-center m-3">ماده اولیه</h2>
            <div class="row justify-content-center">
                <div class="my_col">
                    <div class="card bg-success" style="width: 30rem;">
                        <div class="card-body text-center">
                            <form method="POST" action="/goodsItem">
                                <div class="form-group text-white">
                                    <label for="menu-item-name">افزودن ماده اولیه </label>
                                    <br>
                                    <select name="store" class="w-100 my-2">
                                        <% for(var i=0; i<stores.length; i++) { %>
                                        <option value="<%=stores[i].id%>"><%=stores[i].name%></option>
                                        <% } %>
                                    </select>
                                    <input type="text" class="form-control mb-2" name="name" placeholder="نام محصول">
                                    <input type="text" class="form-control mb-2" name="price" placeholder="قیمت">
                                    <input type="submit" class="float-righ
                                    t btn btn-warning mx-3 mt-3" value="افزودن">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <% for(var i=0; i<goodsItems.length; i++) { %>
                <div class="my_col">
                    <div class="card bg-white" border="1" style="width: 15rem;">
                        <div class="card-body text-center">
                            <% 
                            store = ""
                            for(var j=0; j<stores.length; j++) {
                                if (stores[j].id === goodsItems[i].store) {
                                    store = stores[j].name
                                }
                            } 
                            %>
                            <h6 class="text-center mb-3"><%=store%></h6>
                            <form method="POST" action="/goodsItem/<%=goodsItems[i].id%>?_method=PUT">
                                <input type="text" class="form-control mb-2" name="name" placeholder="نام محصول" value="<%=goodsItems[i].name%>">
                                <input type="text" class="form-control mb-2" name="price" placeholder="قیمت" value="<%=goodsItems[i].price%>">
                                 <input type="submit" class="float-right btn btn-warning w-100 my-2" value="تغییر">
                            </form>
                            <form method="POST" action="/goodsItem/<%=goodsItems[i].id%>?_method=DELETE">
                                <button class="btn btn-info w-100">حذف</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>