<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="stylesheets/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="stylesheets/bootstrap-grid.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
</head>

<body>
    <header>
        <div class="row justify-content-center">
            <div class="alert alert-primary m-3" role="alert">
                <a href="">Customer Orders</a>
            </div>
            <div class="alert alert-primary m-3" role="alert">
                <a href="">Store Orders</a>
            </div>
            <div class="alert alert-primary m-3" role="alert">
                <a href="">Customers</a>
            </div>
            <div class="alert alert-primary m-3" role="alert">
                <a href="">Reports</a>
            </div>
        </div>
    </header>
    <div id="spacer" style="height: 100px;background-color: gray;"></div>
    <div id="store">
        <div class="container">
            <h2 class="text-center m-3">فروشگاه ها</h2>
            <div class="row justify-content-center">
                <div class="my_col">
                    <div class="card bg-success" style="width: 30rem;">
                        <div class="card-body text-center">
                            <form method="POST" action="/store">
                                <div class="form-group text-white">
                                    <label for="menu-item-name">افزودن فروشگاه</label>
                                    <input type="text" class="form-control mb-2" name="name"
                                        placeholder="نام فروشگاه">
                                    <input type="submit" class="float-right btn btn-warning mx-3 mt-3" value="افزودن">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <% for(var i=0; i<stores.length; i++) { %>
                <div class="my_col">
                    <div class="card bg-white" border="1" style="width: 15rem;">
                        <div class="card-body text-center">
                            <form method="POST" action="/store/<%=stores[i].id%>?_method=PUT">
                                <input type="text" class="form-control mb-2" name="name" placeholder="نام فروشگاه" value="<%=stores[i].name%>">
                                <input type="submit" class="float-right btn btn-warning w-100 my-2" value="تغییر">
                            </form>
                            <form method="POST" action="/store/<%=stores[i].id%>?_method=DELETE">
                                <button class="btn btn-info w-100">حذف</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</body>

</html>